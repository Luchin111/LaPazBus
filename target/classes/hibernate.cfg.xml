<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.connection.driver_class">org.mariadb.jdbc.Driver</property>
    <property name="hibernate.connection.url">jdbc:mariadb://localhost:3306/dbtest_lpbus</property>
      <mapping class="domain.MovilidadEntity"/>
      <mapping class="domain.MovilidadRutaEntity"/>
      <mapping class="domain.ParadaEntity"/>
      <mapping class="domain.RutaEntity"/>
      <mapping class="domain.TipoMovilidadEntity"/>
  </session-factory>
</hibernate-configuration>
